<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sparkling Stars Effect</title>
  <style>
    body {
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background: radial-gradient(circle at center, #0a0a0a, #000000);
      overflow: hidden;
      font-family: 'Poppins', sans-serif;
    }

    /* Heading container */
    .heading-container {
      position: absolute;
      top: 40%;
      text-align: center;
      z-index: 2;
    }

    h1 {
      color: #ffffff;
      font-size: 5rem;
      font-weight: 700;
      margin: 0;
      letter-spacing: 3px;
      text-shadow: 0 0 30px rgba(79, 70, 229, 1), 
                   0 0 60px rgba(99, 102, 241, 0.9),
                   0 0 100px rgba(99, 102, 241, 0.8);
    }

    /* Glowing line under heading */
    .line {
      margin: 20px auto 0 auto;
      height: 6px;
      width: 85%;
      border-radius: 4px;
      background: linear-gradient(90deg, 
        transparent, 
        #6366f1, 
        #ffffff, 
        #4f46e5, 
        transparent);
      background-size: 300% 100%;
      animation: fireMove 4s linear infinite;
      box-shadow: 0 0 20px #6366f1, 0 0 40px #ffffff;
      filter: blur(0.5px);
    }

    @keyframes fireMove {
      0% { background-position: 0% 50%; }
      100% { background-position: 200% 50%; }
    }

    /* Sparkles background */
    .sparkles {
      position: relative;
      width: 100vw;
      height: 100vh;
      overflow: hidden;
      z-index: 1;
    }

    .sparkle {
      position: absolute;
      border-radius: 50%;
      opacity: 0.9;
      background: radial-gradient(circle, #ffffff, #9b8cff, #4f46e5);
      box-shadow: 
        0 0 8px #ffffff,
        0 0 15px #8a7cff,
        0 0 30px #4f46e5;
      animation: float 6s linear infinite, flicker 2s infinite;
    }

    @keyframes float {
      from { transform: translateY(100vh) scale(1); opacity: 1; }
      to { transform: translateY(-40vh) scale(0.3); opacity: 0; }
    }

    /* Flicker glowing animation */
    @keyframes flicker {
      0%, 100% { opacity: 1; filter: brightness(1.3); }
      50% { opacity: 0.6; filter: brightness(2); }
    }
  </style>
</head>
<body>
  <!-- Heading + Line -->
  <div class="heading-container">
    <h1>Aceternity</h1>
    <div class="line"></div>
  </div>

  <!-- Sparkling Stars -->
  <div class="sparkles"></div>

  <script>
    const container = document.querySelector(".sparkles");

    function createSparkle() {
      const sparkle = document.createElement("div");
      sparkle.className = "sparkle";

      // Random size
      const size = Math.random() * 5 + 3;
      sparkle.style.width = sparkle.style.height = size + "px";

      // Random horizontal position
      sparkle.style.left = Math.random() * window.innerWidth + "px";
      sparkle.style.top = window.innerHeight + "px";

      // Random speed
      sparkle.style.animationDuration = (Math.random() * 4 + 3) + "s";

      container.appendChild(sparkle);

      setTimeout(() => sparkle.remove(), 7000);
    }

    setInterval(createSparkle, 80);
  </script>
</body>
</html>

