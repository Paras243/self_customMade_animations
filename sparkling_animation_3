  <script>
    const container = document.querySelector(".sparkles");

    function createSparkle() {
      const sparkle = document.createElement("div");
      sparkle.className = "sparkle";
      const size = Math.random() * 5 + 2;
      sparkle.style.width = sparkle.style.height = size + "px";
      sparkle.style.left = Math.random() * 700 + "px";
      sparkle.style.top = 400 + "px";

      // random color glow
      const colors = ["#60a5fa", "#a78bfa", "#e879f9", "#22d3ee", "#ffffff"];
      const color = colors[Math.floor(Math.random() * colors.length)];
      sparkle.style.background = `radial-gradient(circle, #fff, ${color})`;
      sparkle.style.boxShadow = `0 0 10px ${color}aa, 0 0 25px ${color}55`;

      sparkle.style.animationDuration = (Math.random() * 3 + 3) + "s";
      container.appendChild(sparkle);

      setTimeout(() => sparkle.remove(), 6000);
    }

    setInterval(createSparkle, 100);
  </script>
